<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -IBS Inventory Management</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <script>
        $(document).ready(function () {
            $('.dropdown-toggle').dropdown();
        });
    </script>
    <nav>
        <div class="dropdown">
            @Html.Partial("_LoginPartial")
            <button id="AdminMenu" class="btn-primary  dropdown-toggle" data-toggle="dropdown">Stock Management <span class="caret"></span> </button>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Manage Category", "Category", "Index")</li>
                <li>@Html.ActionLink("Manage Company", "Index", "Home")</li>
                <li>@Html.ActionLink("Manage Store", "Index", "Home")</li>
                <li>@Html.ActionLink("Manage Employee", "Index", "Home")</li>
               
                <li>@Html.ActionLink("Manage Products", "Contact", "Home")</li>
                <li>@Html.ActionLink("Manage Suppliers", "About", "Home")</li>
            </ul>
            <button id="Sale" class="btn-primary  dropdown-toggle" data-toggle="dropdown"> Sale <span class="caret"></span> </button>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Sale", "Contact", "Home")</li>
                <li>@Html.ActionLink("Sale Return", "About", "Home")</li>
            </ul>
            <button id="Purchase" class="btn-primary  dropdown-toggle" data-toggle="dropdown"> Purchase <span class="caret"></span> </button>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Purchase", "Index", "Home")</li>
                <li>@Html.ActionLink("Purchase Return", "About", "Home")</li>
            </ul>
            <button id="Reports" class="btn-primary  dropdown-toggle" data-toggle="dropdown"> Reports <span class="caret"></span> </button>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Sale Report", "Index", "Home")</li>
                <li>@Html.ActionLink("Purchase Report", "About", "Home")</li>
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - IBS Inventory Management</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
